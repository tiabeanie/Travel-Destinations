<div class="jumbotron">
  <h1 class="display-3"><%= @destination.description %></h1>
  <p class="lead"><strong>Country to Visit:</strong> <a href="/countries/<%= @destination.country.id %>"><%= @destination.country.name %></a></p>
  <% if @destination.user_id == @user.id %>
    <p>From Your Travel Bucket List</p>
    <a class="btn btn-info btn-sm" href="/experiences/<%= @destination.id %>/edit" role="button">Edit Destination</a>
  <% else %>
    <p>From <%= @destination.user.name %>'s Travel Destination Tracker</p>
    <a class="btn btn-info btm-sm" href="/experiences/<%= @destination.id %>/new_from_user" role="button">Add This Destination</a>
  <% end %>
<hr class="my-4">
</div>
<% if @destination.user_id == @user.id %>
  <div class="text-right"><a class="btn btn-success" style="margin: 20px" href="/experiences" role="button">< Back to My Tracker</a></div>
<% end %>
