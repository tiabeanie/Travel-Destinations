<h1>View all Destinations by Country</h1>
<div class="list-group">
  <% @countries.each do |country| %>
    <% if !country.experiences.empty? %>
    <a href="/countries/<%= country.id %>" class="list-group-item list-group-item-action"><%= country.name %>
    <span class="badge badge-primary badge-pill" style="margin: 5px"><%= country.experiences.length %></span></a>
    <% end %>
  <% end %>
</div>
<div class="text-right"><a class="btn btn-warning" style="margin: 20px" href="/experiences/users" role="button">< Back</a></div>
